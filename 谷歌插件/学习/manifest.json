{
  "manifest_version": 2,
  "name": "test",
  "description": "学习",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "这是一个示例Chrome插件",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*",
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.baidu.com/*"
      ],
      "js": [
        "javascript/baidu-content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*/*.png",
        "*://*/*.jpg",
        "*://*/*.gif",
        "*://*/*.bmp"
      ],
      "js": [
        "javascript/show-image-content-size.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "inject.js"
  ],
  "chrome_url_overrides": {
    "newtab": "html/myweb.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },
  "omnibox": {
    "keyword": "go"
  },
  "devtools_page": "html/devtools.html",
  "homepage_url": "https://www.baidu.com/"
}