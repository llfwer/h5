{
  "manifest_version": 2,
  "name": "P站助手",
  "version": "1.0.0",
  "description": "P站下载助手",
  "page_action": {
    "default_icon": "ic_launcher.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*.pornhub.com/view_video.php?viewkey=*",
        "https://*.pornhubpremium.com/view_video.php?viewkey=*"
      ]
    }
  ],
  "web_accessible_resources": [
    "inject.js"
  ]
}